<body>
    
    {{!-- jumbotron --}}
    <div class="jumbotron jumbotron-fluid">
        <div class="container containerLogBtn container-flex">

            {{!-- creates log in button / log out button / sign up button depending on authentication  --}}
            {{#if isLoggedIn}}
            <input type="button" class="btn btn-secondary btn-xs" value='Log Out' onclick="window.location.href='/logout'" />
            {{/if}}

            {{#unless isLoggedIn}}
            <input type="button" class="btn btn-secondary btn-xs" value='Log In' onclick="window.location.href='https://github.com/login/oauth/authorize?scope=user:email&client_id=<%= client_id %>'" />
            {{/unless}}

            {{#if isLoggedIn}}
            <input type="button" class="btn btn-secondary btn-xs" value='Log Out' onclick="window.location.href='/logout'" />
            {{/if}}

            {{#unless isLoggedIn}}
            <input type="button" class="btn btn-secondary btn-xs" value='Sign Up' onclick="window.location.href='https://github.com/login/oauth/authorize?scope=user:email&client_id=<%= client_id %>'" />
            {{/unless}}

        </div>
        <img class="podpalslogo" src="/images/podpals.png" alt="podpalslogo" />
        <p class="lead">Read and write reviews of today's most popular podcasts</p>
    </div>
    <br>

    {{!-- creates search bar  --}}
    <div class="container">
		<div class="row">
			<div class="col-12 searchArea">
				<form id="search-form">
					<div class="input-group input-group-lg">
					<input class="form-control search-bar" placeholder="Search for a particular podcast...">
                    <span class="input-group-btn">
					    <button class="btn btn-secondary searchBtn" type="submit">Search</button>
					</span>
				    </div>
				</form>
			</div>
		</div>
    </div>

    {{!-- creates individual podcast card via bootstrap --}}
    <div class="row">
        <div class="col-12 results">
            
            {{#each podcasts}}
            <div class="card border-dark bg-bf mb-3 podcastcard" style="max-width: 20%"> 
                <img class="card-img-top podcastImg" src="{{this.imageURL}}" style="max-width: 80%"/>
                <div class="card-body">
                    <div class="card-header"><strong>{{this.title}}</strong></div>
                    <br>
                    <button type="button" class="btn btn-secondary btn-block podcastPage" href="/">Reviews</button>
                    <button type="button" class="btn btn-secondary btn-block feedURL" href="{{this.feedURL}}">Website</button>
                </div>
            </div>
            {{/each}}
            
        </div>
    </div>

    {{!-- footer --}}
            <div class="row">
            <div class="col-12">
                <div class="footer text-center">
                    <a href="/">About Us</a>
                    <a href="/">Contact Us</a>
                    <a href="/">Follow Us</a>
                <br>
                <br>
                    <p>&copy;PodPals, Inc.</p>
                </div>
            </div>
        </div>
</body>
